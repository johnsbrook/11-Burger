<h1>Eat-a-Burger!</h1>

<h2>Burgers to prepare!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers ready to serve!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Ready to Devour?</label><br>
    {{!-- <input type="radio" name="devoured" value="1"> Ready to Serve!<br> --}}
    <input type="radio" name="devoured" value="0"> Prepare!
  </div>

  <button type="submit">Add a Burger</button>
</form>
