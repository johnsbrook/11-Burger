<div class="row container mx-auto">
  <div class="col-12 col-md-6 mx-auto" style="text-align: center;">
    <div class="col-12">
      <p class="text-center"><img src="https://raw.githubusercontent.com/johnsbrook/11-Burger/master/public/assets/img/logo.png"></p>

      <h3 style="font-family: 'Lobster', cursive;">Burgers to prepare!</h3>

      <ul style="list-style: none; font-family: 'Comfortaa', cursive;">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>

      <h3 style="font-family: 'Lobster', cursive;">Burgers ready to serve!</h3>

      <ul style="list-style: none; font-family: 'Comfortaa', cursive;">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>

      <h3 style="font-family: 'Lobster', cursive;">Add a Burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="ca" style="font-family: 'Comfortaa', cursive;">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured" style="font-family: 'Comfortaa', cursive;">Ready to Devour?</label><br>
          {{!-- <input type="radio" name="devoured" value="1"> Ready to Serve!<br> --}}
          <input type="radio" name="devoured" value="0"> Prepare!
        </div>

        <button type="submit" class=" my-2 p-2 px-3 text-white"  style="background-color:blue; border: 0; border-radius: 5px; font-family: 'Comfortaa', cursive;">Add a Burger</button>
      </form>
    </div>
  </div>
</div>
